!!! 5
%html
  {% include document-head.html %}
  %body
    %div.wrapper
      %section#sidebar
        %a.brand{:href => "/"}
          {{ site.title }}
        %nav
          %ul
            {% assign pages_list = site.pages %}
            {% assign group = 'navigation' %}
            {% include JB/pages_list %}
        %h3 
          Recent Posts
        {% for post in site.posts %}
        %li
          %a{:href => '{{ BASE_PATH }}{{ post.url }}'}
            %span
              {{ post.date | date_to_string }}
              &raquo; 
              {{ post.title }}
        {% endfor %}

      %section.content
        {{ content }}
    %div
      {% if page.previous %}
      %a{:href => "{{ BASE_PATH }}{{ page.previous.url }}"} &larr;Prev
      {% endif %}
      {% if page.next %}
      %a{:href => "{{ BASE_PATH }}{{ page.next.url }}"} Next &rarr;
      {% endif %}

    %footer
      %p 
        &copy; {{ site.author.name }} 2013 
        %br
        With help from
        %a{:href => 'http://jekyllbootstrap.com', :target => '_blank'}Jekyll Bootstrap